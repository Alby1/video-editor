<UserControl x:Class="Minimal_Video_Editor.Clip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Minimal_Video_Editor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="MainGrid" Background="MediumPurple" >
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"></RowDefinition>
            <RowDefinition Height="20*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel> <!--anteprime-->
            <StackPanel.LayoutTransform>
                <ScaleTransform ScaleX="{Binding InverseScaleX, RelativeSource={RelativeSource AncestorType=local:Timeline, AncestorLevel=1}}"></ScaleTransform>
            </StackPanel.LayoutTransform>
        </StackPanel>

        <Label x:Name="FilenameLabel" Grid.Row="1">
            <Label.LayoutTransform>
                <ScaleTransform ScaleX="{Binding InverseScaleX, RelativeSource={RelativeSource AncestorType=local:Timeline, AncestorLevel=1}}"></ScaleTransform>
            </Label.LayoutTransform>
        </Label>
    </Grid>
</UserControl>
