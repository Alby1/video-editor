<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Minimal_Video_Editor">
    <Style TargetType="RadioButton" x:Key="RadioToTools">
        <Setter Property="Focusable" Value="False"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid Height="{Binding ActualWidth,RelativeSource={RelativeSource Self}}">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Background" Value="LightGray"></Setter>

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding  RelativeSource={RelativeSource TemplatedParent}, Path=IsChecked}" Value="True">
                                        <Setter Property="Background" Value="BlueViolet"></Setter>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding  RelativeSource={RelativeSource TemplatedParent}, Path=IsMouseOver}" Value="True">
                                        <Setter Property="Background" Value="DarkViolet"></Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <Label Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>